CUR_PATH			:= $(shell pwd)
HOME_PATH			:= $(abspath $(CUR_PATH)/../..)
ROOTFS_TARGET_PATH	?= $(HOME_PATH)/rootfs/rootfs/usr/local

include $(HOME_PATH)/build/color.mk
include $(HOME_PATH)/build/config.mak

all:
	@echo -e $(GREEN)"\nBuild opencv success!!\n"  $(DONE)

install:
	@echo -e $(GREEN)"\nInstall opencv success!!\n"  $(DONE)

clean:
	@echo -e $(GREEN)"\nClean opencv success!!\n"  $(DONE)
